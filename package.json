{
  "name": "project-trillo",
  "version": "1.0.0",
  "description": "trillo app",
  "main": "index.js",
  "repository": "https://github.com/barryblando/project-trillo.git",
  "scripts": {
    "watch:sass": "node-sass app/sass/main.scss app/css/style.css -w",
    "dev:server": "live-server app",
    "start": "npm-run-all --parallel dev:server watch:sass",
    "compile:sass": "node-sass app/sass/main.scss app/css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -c postcss.config.json app/css/style.comp.css -o app/css/style.prefix.css",
    "compress:css": "node-sass app/css/style.prefix.css app/css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "author": "Retr0_0x315 <barryblando@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^8.1.0",
    "concat": "^1.0.3",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "postcss-cli": "^5.0.0",
    "sass-lint": "^1.12.1"
  }
}
